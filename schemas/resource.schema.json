{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/mromanello/DTS-validator/main/schemas/resource.schema.json",
    "$comment": "https://distributed-text-services.github.io/specifications/versions/1-alpha/#resource",
    "type": "object",
    "properties": {
        "@id": {
            "type": "string",
            "format": "uri"
        },
        "@type": {
            "type": "string",
            "pattern": "^(Resource)$"
        },
        "collection": {
            "type": "string",
            "format": "uri-template"
        },
        "citationTrees": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "identifier": {"type": "string" },
                    "@type": {"type": "string" },
                    "maxCiteDepth": {"type": "number"},
                    "citeStructure": {
                        "$ref": "#/$defs/citeStructure"
                    },
                    "description": {"type": "string" }
                },
                "required":[
                    "@type", "maxCiteDepth"
                ]
            }
        },
        "mediaTypes": {
            "type": "array",
            "items": { "type": "string" }
        }
    },
    "$defs": {
        "citeStructure": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "citeType": { "type": "string" },
                    "citeStructure": {
                        "$ref": "#/$defs/citeStructure"
                    }
                }
            }
        }
    },
    "required": ["@id", "@type", "collection", "citationTrees"]
}