{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/mromanello/DTS-validator/main/schemas/collection_response.schema.json",
    "type": "object",
    "properties": {
        "title": {"type": "string"},
        "@id": {
            "type": "string",
            "format": "uri"
        },
        "@type": {
            "type": "string",
            "pattern": "^(Collection|Resource)$"
        },
        "dtsVersion": {"type": "string"},
        "totalChildren": {"type": "number"},
        "totalParents": {"type": "number"},
        "maxCiteDepth": {"type": "number"},
        "description": {"type": "string"},
        "member": {
            "type": "array",
            "items": {
                "$ref": "#"
            }
        },
        "dublinCore": {
            "type": "object"
        },
        "extensions": {
            "type": "object"
        },
        "document": {
            "type": "string",
            "format": "uri"
        },
        "navigation": {
            "type": "string",
            "format": "uri"
        },
        "collection": {
            "type": "string",
            "format": "uri"
        },
        "download": {
            "anyOf": [
                {"type": "string",
                 "format": "uri"},
                {"type": "array",
                 "items": {
                    "type": "string",
                    "format": "uri"
                 }
                }
            ]
        },
        "citationTrees":{
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {"type": "string" },
                    "@type": {"type": "string" },
                    "maxCiteDepth": {"type": "number"},
                    "citeStructure": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "citeType": { "type": "string" },
                                "citeStructure": {
                                    "$ref": "#/properties/citeStructure"
                                }
                            }
                        }
                    }
                },
                "required":[
                    "@type", "maxCiteDepth", "citeStructure"
                ]
            }
        }
    },
    "required": [
        "title", "@id", "@type", "totalChildren", "totalParents"
    ]
}